@using WorkDot.Services.Models
@using MudBlazor

<h3>Email Plugin</h3>

@if (PlanModels is not null)
{
    <MudGrid>
        @foreach (var plan in PlanModels)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <MudCard>
                    <MudCardHeader>
                        <MudText Typo="Typo.h6">@plan.Priority</MudText>
                        <MudText Typo="Typo.caption">@plan.Action)</MudText>
                    </MudCardHeader>

                    <MudCardContent>
                        <MudText Typo="Typo.body2">
                            @plan.Response
                        </MudText>

                        <MudDivider Class="my-2" />
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Color="Color.Primary" Variant="Variant.Text">Open</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
}

@code {
    [Parameter]
    public List<PlanModel> PlanModels { get; set; } = new();
}
